#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_js-beautify@1.10.2@js-beautify/js/bin/html-beautify.js" "$@"
  ret=$?
else 
  node  "$basedir/../../../_js-beautify@1.10.2@js-beautify/js/bin/html-beautify.js" "$@"
  ret=$?
fi
exit $ret
