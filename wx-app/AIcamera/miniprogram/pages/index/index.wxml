<!--index.wxml-->
<!-- 框架 vant   /  weui -->
<view class="index">
  <view class="index-hd">
    <image class="index-logo" src="/resources/images/tencentcloud.png" />
    <view class="index-desc" style="text-align:center;">以下将展示小程序 云开发解决方案</view>
  </view>
  <view class="index-bd">
    <view class="login" style="text-align:center;" wx:if="{{!userInfo}}">
      <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="weui-btn" type="primary">
        登陆
      </button>
    </view>
    <button type="primary" bindtap="start" class="weui-btn" wx:if="{{userInfo}}">检测</button>
  </view>
</view>